@model IEnumerable<proyecto24BM.Models.Articulos>
@{
    ViewData["Title"] = "Articulos";
}

<div class="row">
    <div class="offset-9 col-3 mb-3">
        <a asp-action="Crear" asp-controller="Home" class="btn btn-success" d-block mx-auto btn-lg> <i class="fa-solid fa-user"></i> Nuevo Usuario</a>
    </div>
</div>

<div  class="container-fluid">
    <div class="offset-12"> 
        <div class="card border">
            <div class="card-header bg-dark">
                <h1 class="text-white"><strong>Lista de articulos</strong></h1>

            </div>

            <div class="card-body">
                <div class="table-responsive"> 
                    @if (Model.Count() > 0)
                    {
                        <table class="table table-bordered align-middle" id="tbArticulos" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(x => x.Nombre)</th>
                                <th>@Html.DisplayNameFor(x => x.Descripcion)</th>
                                <th>@Html.DisplayNameFor(x => x.Urlimg)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(x => item.Nombre)</td>
                                    <td>@Html.DisplayFor(x => item.Descripcion)</td>
                                    <td>@Html.DisplayFor(x => item.Urlimg)</td>
                                </tr>
                            }
                        </tbody>
                        </table>
                    }
                    else
                    {
                        <p>No hay registros</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
